<!-- This is the partial I use to render messages to the layout -->
<% flash.each do | message_type, message_content | %>
  <% flash.delete(:timeout) %>
    <div class="ui <%= flash_class(message_type) %> message transition">
        <i class="close icon"></i>
        <div class="header">
            <%= message_content %>
        </div>
    </div>
<% end %>
