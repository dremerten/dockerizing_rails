<div class="ui menu">
  <%= link_to root_path do %>
  <div class="item">
      <i class="folder icon"></i>
    <% end %>
  </div>
  <div class="item">
    <%= link_to new_document_path do %>
      <i class="file icon"></i>
    <% end %>
  </div>

  <!-- <a class="item">
    <i class="file outline icon"></i>
  </a>
