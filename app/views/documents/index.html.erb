<h2 class="ui center aligned header">
  <%= current_user.name.capitalize %>'s Notes</h2>
  <%= render 'documents/messages' %>
<div class="ui three stackable cards">
  <% @documents.each do |document| %>
  <div class="card">
    <div class="content">
      <div class="item">
         <%= link_to document_path(document),method: :delete, data: { confirm: 'Are you sure?' } do %>
           <i class="right floated trash icon"></i>
         <% end %>
      </div>
      <div class="center aligned header">
        <%= document.title %>
      </div>
      <div class="center aligned description">
        <%= truncate(document.body, length: 250) %>
      </div>

    </div>
    <div class="extra content center aligned">
      <small>Created:<%= time_ago_in_words(document.created_at) %> ago, Last updated: <%= time_ago_in_words(document.updated_at) %> ago</small>
      <div class="ui two buttons">
        <%= link_to 'Read', document_path(document), class: "ui button" %>
        <%= link_to 'Edit', edit_document_path(document), class: "ui button" %>
      </div>
    </div>
  </div>
  <% end %>
</div>


